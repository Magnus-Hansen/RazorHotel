@page
@model RazorHotel.Pages.Rooms.GetAllRoomsModel
@{
    ViewData["Title"] = "GetAllRooms";
}
<h4 style="color:aquamarine"> List of rooms</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                room No
            </th>
            <th>
                Types
            </th>
            <th>
                Price
            </th>
            <th>
                Hotel No
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Rooms.Count() != 0)
        {
            @foreach (var item in Model.Rooms)
            {
                <tr>
                    <td>
                        @item.Room_No
                    </td>
                    <td>
                        @item.Types
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @item.Hotel_No
                    </td>
                    <td>
                        <p>
                            <a asp-page="/Rooms/DeleteRoom" asp-route-room_no="@item.Room_No" asp-route-hotel_no="@item.Hotel_No">Delete</a>|
                            <a asp-page="/Rooms/UpdateRoom" asp-route-room_no="@item.Room_No" asp-route-hotel_no="@item.Hotel_No">Edit</a>|
                        </p>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
