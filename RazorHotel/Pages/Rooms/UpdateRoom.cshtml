@page
@model RazorHotel.Pages.Rooms.UpdateRoomModel
@{
    ViewData["Title"] = "Update room";
}

<h1>Update Hotel</h1>

<form method="post">

    <input type="hidden" asp-for="@Model.RoomToUpdate.Room_No" />
    <input type="hidden" asp-for="@Model.RoomToUpdate.Hotel_No" />
    <div class="form-group">
        <label asp-for="@Model.RoomToUpdate.Types" class="control-label"></label>
        <input asp-for="@Model.RoomToUpdate.Types" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.RoomToUpdate.Price" class="control-label"></label>
        <input asp-for="@Model.RoomToUpdate.Price" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Update a room" asp-page-handler="Update" class="btn btn-primary" />
        <input type="submit" value="Delete a room" asp-page-handler="Delete" class="btn btn-primary" />
    </div>
</form>